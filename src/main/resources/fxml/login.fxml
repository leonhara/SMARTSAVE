<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="smartsave.controller.LoginController"
      fx:id="loginPane"
      alignment="CENTER" spacing="20.0"
      prefWidth="600" prefHeight="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="titleLabel" text="SmartSave"/>
    <Label fx:id="subtitleLabel" text="Inicia sesión para continuar"/>

    <GridPane vgap="10" hgap="10" alignment="CENTER">
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="emailField" promptText="Ingresa tu email"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" promptText="Ingresa tu contraseña"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <Button fx:id="loginButton" text="Iniciar Sesión" onAction="#handleLoginButtonAction"/>

    <HBox alignment="CENTER" spacing="5">
        <Label text="¿No tienes cuenta?"/>
        <Hyperlink text="Regístrate" onAction="#handleRegistroLinkAction"/>
    </HBox>
</VBox>