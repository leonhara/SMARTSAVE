<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/23.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="smartsave.controlador.ConfiguracionController">
    <top>
        <HBox fx:id="titleBar" alignment="CENTER_RIGHT" spacing="5">
            <padding>
                <Insets bottom="5" left="10" right="10" top="5" />
            </padding>
            <children>
                <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="SmartSave - Configuración" HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER_RIGHT" spacing="2">
                    <Button fx:id="minimizeButton" onAction="#handleMinimizeAction" text="—" />
                    <Button fx:id="maximizeButton" onAction="#handleMaximizeAction" text="□" />
                    <Button fx:id="closeButton" onAction="#handleCloseAction" text="✕" />
                </HBox>
            </children>
        </HBox>
    </top>

    <left>
        <!-- Menú de navegación lateral -->
        <VBox fx:id="sideMenu" prefWidth="200" spacing="5">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10" />
            </padding>

            <!-- Logo y título -->
            <HBox alignment="CENTER" spacing="10" prefHeight="60">
                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../imagenes/piggy_icon.png"/>
                </ImageView>
                <Label fx:id="appTitleLabel" text="SmartSave" style="-fx-font-size: 18; -fx-font-weight: bold;" />
            </HBox>

            <Separator />

            <!-- Opciones del menú -->
            <Button fx:id="dashboardButton" text="Dashboard" maxWidth="Infinity" onAction="#handleDashboardAction">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../imagenes/dashboard_icon.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="transactionsButton" text="Ingresos/Gastos" maxWidth="Infinity" onAction="#handleTransactionsAction">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../imagenes/transactions_icon.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="nutritionButton" text="Perfil Nutricional" maxWidth="Infinity" onAction="#handleNutritionAction">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../imagenes/nutrition_icon.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="shoppingButton" text="Plan de Compras" maxWidth="Infinity" onAction="#handleShoppingAction">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../imagenes/shopping_icon.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="savingsButton" text="Modalidades Ahorro" maxWidth="Infinity" onAction="#handleSavingsAction">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../imagenes/savings_icon.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="reportsButton" text="Informes" maxWidth="Infinity" onAction="#handleReportsAction">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../imagenes/reports_icon.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Separator />

            <Region VBox.vgrow="ALWAYS" /> <!-- Espaciador flexible -->

            <Button fx:id="settingsButton" text="Configuración" maxWidth="Infinity" onAction="#handleSettingsAction">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../imagenes/settings_icon.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="profileButton" text="Mi Perfil" maxWidth="Infinity" onAction="#handleProfileAction">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../imagenes/profile_icon.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="logoutButton" text="Cerrar Sesión" maxWidth="Infinity" onAction="#handleLogoutAction">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../imagenes/logout_icon.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-background-color: transparent;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>

                <!-- Título de la página -->
                <VBox spacing="10" style="-fx-background-color: rgba(30, 30, 40, 0.7); -fx-background-radius: 10px; -fx-border-color: rgba(100, 100, 200, 0.5); -fx-border-radius: 10px;">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15" />
                    </padding>
                    <Label text="Configuración de la Aplicación" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: rgb(230, 230, 250);" />
                    <Label text="Personaliza la aplicación según tus preferencias." style="-fx-font-size: 14; -fx-text-fill: rgb(200, 200, 220);" wrapText="true" />
                </VBox>

                <!-- Apariencia -->
                <VBox spacing="15" style="-fx-background-color: rgba(30, 30, 40, 0.7); -fx-background-radius: 10px; -fx-border-color: rgba(100, 100, 200, 0.5); -fx-border-radius: 10px;">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15" />
                    </padding>
                    <Label text="🎨 Apariencia" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: rgb(230, 230, 250);" />

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="Tema:" />
                        <ComboBox fx:id="temaComboBox" prefWidth="200" />
                    </HBox>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="Idioma:" />
                        <ComboBox fx:id="idiomaComboBox" prefWidth="200" />
                    </HBox>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="Tamaño de fuente:" />
                        <Slider fx:id="tamanoFuenteSlider" min="12" max="20" value="14" showTickLabels="true" showTickMarks="true" majorTickUnit="2" />
                        <Label fx:id="tamanoFuenteLabel" text="14px" style="-fx-min-width: 40;" />
                    </HBox>
                </VBox>

                <!-- Notificaciones -->
                <VBox spacing="15" style="-fx-background-color: rgba(30, 30, 40, 0.7); -fx-background-radius: 10px; -fx-border-color: rgba(100, 100, 200, 0.5); -fx-border-radius: 10px;">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15" />
                    </padding>
                    <Label text="🔔 Notificaciones" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: rgb(230, 230, 250);" />

                    <VBox spacing="10">
                        <CheckBox fx:id="notificacionesGastosCheckBox" text="Notificarme cuando me acerque al límite de presupuesto" selected="true" />
                        <CheckBox fx:id="notificacionesIngresoCheckBox" text="Recordatorios para registrar ingresos recurrentes" selected="true" />
                        <CheckBox fx:id="notificacionesComprasCheckBox" text="Alertas de ofertas en productos de mi lista de compra" selected="false" />
                        <CheckBox fx:id="notificacionesAhorroCheckBox" text="Recordatorios para revisar mis metas de ahorro" selected="true" />
                    </VBox>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="Envío por email:" />
                        <CheckBox fx:id="emailNotificacionesCheckBox" text="Resumen semanal por email" selected="false" />
                    </HBox>
                </VBox>

                <!-- Datos y Seguridad -->
                <VBox spacing="15" style="-fx-background-color: rgba(30, 30, 40, 0.7); -fx-background-radius: 10px; -fx-border-color: rgba(100, 100, 200, 0.5); -fx-border-radius: 10px;">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15" />
                    </padding>
                    <Label text="🔒 Datos y Seguridad" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: rgb(230, 230, 250);" />

                    <HBox spacing="10">
                        <Button fx:id="copiaSeguridad" text="Crear Copia de Seguridad" onAction="#handleCrearCopiaSeguridadAction" prefWidth="200" />
                        <Label text="Última copia: " style="-fx-text-fill: rgb(200, 200, 220);" />
                        <Label fx:id="fechaUltimaCopia" text="No disponible" style="-fx-text-fill: rgb(200, 200, 220);" />
                    </HBox>

                    <HBox spacing="10">
                        <Button fx:id="exportarDatos" text="Exportar Datos" onAction="#handleExportarDatosAction" prefWidth="200" />
                        <Label text="Exporta tus datos a CSV/JSON" style="-fx-text-fill: rgb(200, 200, 220);" />
                    </HBox>

                    <HBox spacing="10">
                        <Button fx:id="cambiarContrasena" text="Cambiar Contraseña" onAction="#handleCambiarContrasenaAction" prefWidth="200" />
                        <Label text="Modifica tu contraseña de acceso" style="-fx-text-fill: rgb(200, 200, 220);" />
                    </HBox>
                </VBox>

                <!-- Avanzado -->
                <VBox spacing="15" style="-fx-background-color: rgba(30, 30, 40, 0.7); -fx-background-radius: 10px; -fx-border-color: rgba(100, 100, 200, 0.5); -fx-border-radius: 10px;">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15" />
                    </padding>
                    <Label text="⚙️ Configuración Avanzada" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: rgb(230, 230, 250);" />

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="Moneda predeterminada:" />
                        <ComboBox fx:id="monedaComboBox" prefWidth="150" />
                    </HBox>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="Decimales en moneda:" />
                        <ComboBox fx:id="decimalesComboBox" prefWidth="100" />
                    </HBox>

                    <CheckBox fx:id="modoDebugCheckBox" text="Modo desarrollador (mostrar información técnica)" selected="false" />
                </VBox>

                <!-- Sobre la aplicación -->
                <VBox spacing="15" style="-fx-background-color: rgba(30, 30, 40, 0.7); -fx-background-radius: 10px; -fx-border-color: rgba(100, 100, 200, 0.5); -fx-border-radius: 10px;">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15" />
                    </padding>
                    <Label text="ℹ️ Sobre SmartSave" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: rgb(230, 230, 250);" />

                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" prefWidth="120.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="200.0" prefWidth="250.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="25.0" prefHeight="25.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="25.0" prefHeight="25.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="25.0" prefHeight="25.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="25.0" prefHeight="25.0" vgrow="SOMETIMES" />
                        </rowConstraints>

                        <Label text="Versión:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="versionLabel" text="1.0.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Autor:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="autorLabel" text="Leonel Yupanqui Serrano" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Fecha de compilación:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="fechaCompilaciónLabel" text="28/04/2025" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Centro educativo:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Label fx:id="centroLabel" text="Salesianos San Francisco De Sales El Buen Amigo" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </GridPane>

                    <HBox spacing="10">
                        <Button fx:id="licenciaButton" text="Ver Licencia" onAction="#handleVerLicenciaAction" />
                        <Button fx:id="privacidadButton" text="Política de Privacidad" onAction="#handlePoliticaPrivacidadAction" />
                        <Button fx:id="acercaDeButton" text="Acerca de" onAction="#handleAcercaDeAction" />
                    </HBox>
                </VBox>

                <!-- Botones de acción -->
                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="guardarConfiguracion" text="Guardar Configuración" onAction="#handleGuardarConfiguracionAction" prefWidth="180" />
                    <Button fx:id="restablecerConfiguracion" text="Restablecer por Defecto" onAction="#handleRestablecerConfiguracionAction" prefWidth="180" />
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>